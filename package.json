{
  "name": "robot-control",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "cd packages/types && npm run build",
    "dev": "turbo run dev",
    "dev:api": "npm run dev --workspace=@robot-control/api",
    "dev:web": "npm run dev --workspace=web",
    "build": "turbo run build"
  },
  "devDependencies": {
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
